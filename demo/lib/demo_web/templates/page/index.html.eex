<h4>Basic</h4>

<%= form_for @changeset, "/", [multipart: true], fn f -> %>
  <%= MDF.text_input f, :value, input: [placeholder: "Enter Value"] %>
  <%= MDF.textarea f, :value_1, label: [text: "Textarea"], input: [help: "help text"] %>
  <%= MDF.file_input f, :value_2, label: [text: "File"] %>
  <%= MDF.email_input f, :value_3, label: [text: "Email"] %>
  <%= MDF.password_input f, :value_4, label: [text: "Password"] %>
  <%= MDF.telephone_input f, :value_5, label: [text: "Telephone"] %>
  <%= MDF.select f, :value_6, ["a", "b", "c"], label: [text: "Select"] %>

  <%= MDF.multiple_select f, :array_value, ["red", "green"] %>

  <%= MDF.checkbox f, :value_7 %>
  <%= MDF.checkbox f, :value_8, label: [text: "Custom Label"], input: [help: "help text"] %>

  <%= MDF.radio_buttons f, :value_9, ["red", "green"] %>
  <%= MDF.radio_buttons f, :value_10, [{"Reddish", "red"}, {"Greenish", "green"}], label: [text: "Custom"], input: [help: "help text"] %>
  <%= MDF.radio_buttons f, :value_11, ["left", "top", "right"], input: [inline: true], label: [text: "Inline"] %>

  <%= MDF.radio_buttons f, :value_12, ["purple rain", "violet thing"], label: [text: ""] %>

  <% opts = [label: [text: "Custom", class: "red"], input: [help: "help text", append: "$", prepend: "%", placeholder: "Placeholder Text", data: [foo: "bar"]]] %>
  <%= MDF.text_input f, :value_13, opts %>

  <%= MDF.static f, "Label", "Content" %>

  <%= MDF.checkboxes f, :value_14, ["red", "green", "blue"], selected: ["green"] %>

  <%= MDF.submit f %>

  <% cancel = link "Cancel", to: "", class: "btn btn-link" %>
  <%= MDF.submit f, "Smash", class: "btn-primary", alternative: cancel %>
<% end %>

<h4>With Errors</h4>

<%= form_for @changeset_with_error, "/", fn f -> %>
  <%= MDF.text_input f, :error_value, input: [help: "help text"] %>
  <%= MDF.select f, :error_value, ["a", "b", "c"] %>
  <%= MDF.textarea f, :error_value %>
  <%= MDF.radio_buttons f, :error_value, ["red", "green"] %>
  <%= MDF.radio_buttons f, :error_value, ["red", "green"] %>
  <%= MDF.checkbox f, :error_value %>
  <%= MDF.submit f %>
<% end %>

<h4>Custom Grid</h4>

<%= form_for @changeset, "/", [label_col: "col-form-label col-sm-3", control_col: "col-sm-9"], fn f -> %>
  <%= MDF.text_input f, :value %>
  <%= MDF.submit f %>
<% end %>
